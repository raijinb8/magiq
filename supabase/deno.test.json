{
  "test": {
    "include": ["functions/**/*_test.ts", "functions/**/*.test.ts"],
    "exclude": ["functions/*/node_modules"],
    "permissions": {
      "net": ["supabase.co", "googleapis.com"],
      "env": true,
      "read": true
    }
  },
  "fmt": {
    "include": ["functions/"],
    "exclude": ["functions/*/node_modules"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["functions/"],
    "exclude": ["functions/*/node_modules"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "explicit-function-return-type",
        "no-await-in-loop"
      ]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "allowJs": true,
    "strict": true
  },
  "imports": {
    "@google/genai": "npm:@google/genai@^0.14.0",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@2",
    "@std/testing": "https://deno.land/std@0.224.0/testing/mod.ts",
    "@std/testing/asserts": "https://deno.land/std@0.224.0/testing/asserts.ts",
    "@std/testing/mock": "https://deno.land/std@0.224.0/testing/mock.ts"
  }
}